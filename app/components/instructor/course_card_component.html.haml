= link_to edit_teach_course_path(course) do
  .group.flex.flex-col.border.border-neutral-200.hover:border-neutral-900.transition-colors.duration-300
    .relative.bg-neutral-100.overflow-hidden.border-b.border-neutral-200.group-hover:border-neutral-900.transition-colors{class: "aspect-[16/9]"}
      -# Placeholder pattern instead of image
      .w-full.h-full.opacity-50{class: "bg-[url('https://www.transparenttextures.com/patterns/graphy.png')]"}

      - if published?
        .absolute.top-4.left-4.bg-white.border.border-neutral-900.px-3.py-1
          %span.block.font-bold.uppercase.tracking-widest.text-emerald-700
            = t(".published")
      - else
        .absolute.top-4.left-4.bg-white.border.border-neutral-900.px-3.py-1
          %span.block.font-bold.uppercase.tracking-widest.text-neutral-500
            = t(".draft")

    .p-6.flex.flex-col.flex-1
      %h3.text-lg.font-bold.text-neutral-900.leading-tight.mb-2.group-hover:underline.underline-offset-4.decoration-2
        = course.title

      %p.text-sm.text-neutral-500.mb-6.line-clamp-2
        = description

      - if published?
        .mt-auto.flex.items-center.justify-between.pt-4.border-t.border-neutral-100
          .flex.items-center.gap-4
            .flex.items-center.gap-1.text-neutral-600
              %svg.w-4.h-4{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewBox: "0 0 24 24"}
                %path{d: "M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"}
                %circle{cx: "9", cy: "7", r: "4"}
                %path{d: "M23 21v-2a4 4 0 0 0-3-3.87"}
                %path{d: "M16 3.13a4 4 0 0 1 0 7.75"}
              %span.text-xs.font-medium
                = students_count

            .flex.items-center.gap-1.text-neutral-600
              %svg.w-4.h-4{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewBox: "0 0 24 24"}
                %path{d: "M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"}
              %span.text-xs.font-medium
                = course_duration
          .text-xs.font-bold.uppercase.tracking-widest.text-neutral-900
            = t(".manage")
      - else
        .mt-auto.flex.items-center.justify-between.pt-4.border-t.border-neutral-100
          .flex.items-center.gap-4
            %span.text-xs.text-neutral-400.italic
              = t(".not_yet_published")

          .text-xs.font-bold.uppercase.tracking-widest.text-neutral-900
            = t(".manage")
