.max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8.py-12
  -# --- PAGE HEADER ---
  .flex.flex-col.md:flex-row.md:items-end.justify-between.gap-6.mb-16
    .space-y-2
      %p.text-xs.font-bold.text-neutral-500.uppercase{class: "tracking-[0.2em]"}
        = t(".overview")
      %h1.text-4xl.md:text-5xl.font-black.text-neutral-900.uppercase.tracking-tight.leading-none
        = t(".welcome_back")
        %br
        = user.full_name

    -# Primary Action Button (Sharp, Black, Bold)
    = link_to new_teach_course_path, class: "inline-flex items-center justify-center bg-neutral-900 text-white px-8 py-4 text-xs font-bold uppercase hover:bg-neutral-700 transition-colors border border-neutral-900 tracking-[0.15em]" do
      %svg.w-4.h-4.mr-2{fill: "none", stroke: "currentColor", "stroke-width" => "2", viewBox: "0 0 24 24"}
        %path{d: "M12 5v14M5 12h14"}
      = t(".links.create_course")

  -# --- STATS STRIP (Newspaper Style) ---
  .grid.grid-cols-1.md:grid-cols-3.border-y.border-neutral-900.mb-16
    .p-6.md:border-r.border-neutral-900.flex.items-baseline.justify-between
      %span.text-xs.font-bold.uppercase.tracking-widest.text-neutral-500
        = t(".stats.total_courses")
      %span.text-3xl.font-black.text-neutral-900
        = created_courses_count
    .p-6.md:border-r.border-neutral-900.flex.items-baseline.justify-between
      %span.text-xs.font-bold.uppercase.tracking-widest.text-neutral-500
        = t(".stats.active_students")
      %span.text-3xl.font-black.text-neutral-900
        = active_students_count
    .p-6.flex.items-baseline.justify-between
      %span.text-xs.font-bold.uppercase.tracking-widest.text-neutral-500
        = t(".stats.revenue_ytd")
      %span.text-3xl.font-black.text-neutral-900
        = total_revenue

  -# --- COURSES GRID ---
  .flex.items-center.justify-between.mb-8
    %h2.text-xl.font-bold.text-neutral-900.uppercase.tracking-widest
      = t(".courses")

  - if courses.empty?
    -# --- EMPTY STATE ---
    .col-span-1.md:col-span-2.lg:col-span-3.group
      = link_to new_teach_course_path, class: "block h-full w-full" do
        .border-2.border-dashed.border-neutral-300.group-hover:border-neutral-900.bg-neutral-50.group-hover:bg-white.transition-all.duration-300.flex.flex-col.items-center.justify-center

          -# Typography
          %h3.text-lg.font-bold.uppercase.tracking-widest.text-neutral-900.mb-2
            = t(".empty_state.headline")

          %p.text-sm.text-neutral-500.max-w-md.text-center.leading-relaxed.mb-8
            = t(".empty_state.subtext")

          -# Fake Button Visual
          %span.inline-block.text-xs.font-bold.uppercase.text-neutral-900.border-b-2.border-transparent.group-hover:border-neutral-900.transition-all{class: "tracking-[0.15em]"}
            = t(".links.create_course_now")

  .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-x-8.gap-y-12
    - courses.each do |course|
      = render Instructor::CourseCardComponent.new(course)
