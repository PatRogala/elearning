%section.border-b.border-neutral-900.bg-white
  .max-w-7xl.mx-auto
    .grid.grid-cols-1.lg:grid-cols-12

      -# --- LEFT COLUMN: Typography (Spans 5 cols) ---
      .lg:col-span-5.flex.flex-col.justify-between.p-6.md:p-12.border-b.lg:border-b-0.lg:border-r.border-neutral-900

        -# Header Tag
        .mb-8
          .flex.items-center.gap-3.mb-6
            %span.w-2.h-2.bg-neutral-900
            %span.text-xs.font-bold.uppercase.text-neutral-500{class: "tracking-[0.2em]"}
              = t('.header')

          -# Main Headline
          %h1.text-5xl.lg:text-6xl.font-black.uppercase.tracking-tighter.text-neutral-900.mb-6{class: "leading-[0.9]"}
            = course.title

          %div.text-base.text-neutral-600.leading-relaxed.max-h-36.overflow-scroll
            = course.description

        -# Action Area
        .mt-auto.pt-8
          .flex.flex-col.gap-4
            %a.group.flex.items-center.justify-between.bg-neutral-900.text-white.px-6.py-4.text-sm.font-bold.uppercase.hover:bg-neutral-700.transition-colors{href: "#", class: "tracking-[0.15em]"}
              %span
                = t('.cta')
              %span.group-hover:translate-x-1.transition-transform &rarr;

            %div.flex.items-center.justify-between.px-6.py-3.border.border-neutral-200
              %span.text-xs.font-bold.uppercase.tracking-widest.text-neutral-500
                = t('.price')
              %span.text-lg.font-black.text-neutral-900
                = course.price.format

      -# --- RIGHT COLUMN: Visuals & Data (Spans 7 cols) ---
      .lg:col-span-7.flex.flex-col

        -# 1. Image Container (Constrained to 16:9 Aspect Ratio)
        .relative.w-full.aspect-video.bg-neutral-100.border-b.border-neutral-900.group.overflow-hidden
          = image_tag course.image_cover, class: "w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 ease-in-out", alt: course.title

          -# Badge
          .absolute.top-0.left-0.bg-neutral-900.text-white.px-4.py-2
            %span.font-bold.uppercase.tracking-widest{class: "text-[10px]"}
              = t('.badge')

        -# 2. Metadata Grid (Fills the rest of the column)
        .grid.grid-cols-2.sm:grid-cols-3.flex-1.bg-white

          -# Cell: Instructor
          .p-6.border-r.border-b.sm:border-b-0.border-neutral-900.flex.flex-col.justify-center
            %span.block.font-bold.uppercase.text-neutral-400.mb-2{class: "text-[10px] tracking-[0.2em]"}
              = t('.instructor')
            .flex.items-center.gap-3
              .w-8.h-8.bg-neutral-200.border.border-neutral-900
                = image_tag course.instructor.avatar_preview, class: "w-full h-full object-cover", alt: course.instructor.full_name
              %span.text-xs.font-bold.text-neutral-900.uppercase
                = course.instructor.full_name

          -# Cell: Duration
          .p-6.border-r.border-b.sm:border-b-0.border-neutral-900.flex.flex-col.justify-center
            %span.block.font-bold.uppercase.text-neutral-400.mb-2{class: "text-[10px] tracking-[0.2em]"}
              = t('.duration')
            .flex.items-center.gap-2.h-8
              %svg.w-5.h-5.text-neutral-900{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewBox: "0 0 24 24"}
                %path{d: "M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"}
              %span.text-sm.font-bold.text-neutral-900 4h 30m

          -# Cell: Tech Stack (Spans full on mobile, 1 on desktop)
          .col-span-2.sm:col-span-1.p-6.flex.flex-col.justify-center
            %span.block.font-bold.uppercase.text-neutral-400.mb-2{class: "text-[10px] tracking-[0.2em]"}
              = t('.tech_stack')
            .flex.gap-2
              %span.px-2.py-1.border.border-neutral-300.font-bold.uppercase.text-neutral-600{class: "text-[10px]"} React
              %span.px-2.py-1.border.border-neutral-300.font-bold.uppercase.text-neutral-600{class: "text-[10px]"} Figma
              %span.px-2.py-1.border.border-neutral-300.font-bold.uppercase.text-neutral-600{class: "text-[10px]"} CSS
