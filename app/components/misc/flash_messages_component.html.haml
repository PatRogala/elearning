.fixed.top-4.right-4.z-50.space-y-2
  - flash_entries.each do |entry|
    .w-80.max-w-sm.border.rounded-md.shadow-md.px-4.py-3.flex.items-start.space-x-3.transition-all.duration-300.ease-out.opacity-0.translate-y-2{ class: type_styles(entry[:type]), data: { controller: "flash" } }
      %div.pt-0.5
        = lucide_icon(type_icon(entry[:type]), class: "h-5 w-5")
      %div.flex-1.text-sm.leading-5
        = entry[:message]
      %button.ml-2.text-current.opacity-60.hover:opacity-100.transition{ type: "button", data: { action: "click->flash#dismiss" }, "aria-label" => "Close" }
        = lucide_icon("x", class: "h-4 w-4")


